{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"downlevelIteration": true,
		"experimentalDecorators": false,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["dom", "es2015", "es2015.generator", "es2016", "es2017"],
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"strict": true,
		"target": "es5"
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": ["**/**/__tests__/***/**"]
}
